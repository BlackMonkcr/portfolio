---
// components/SkillSection.astro
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---
<div class="bg-[#1e2028] rounded-lg p-6">
  <h3 class="text-xl font-bold text-white mb-4">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map(skill => (
      <span class="px-3 py-1 bg-[#2a2b31] text-gray-300 rounded-full text-sm hover:bg-opacity-80 transition-colors">
        {skill}
      </span>
    ))}
  </div>
</div>